@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="text-sm breadcrumbs">
        <ul>
            <li><a>Home</a></li>

            <li>Movies</li>
        </ul>
    </div>

    <form asp-action="Edit" class="my-2 mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-control w-full max-w-xs">
            <label asp-for="Title" class="label">
            </label>
            <input type="text" placeholder="Type here" asp-for="Title" class="input input-bordered w-full max-w-xs" />
            <label class="label">
                <span asp-validation-for="Title" class="text-sm text-red-400"></span>

            </label>
        </div>
        <div class="form-control w-full max-w-xs">
            <label asp-for="ReleaseDate" class="label">
            </label>
            <input asp-for="ReleaseDate" class="input input-bordered w-full max-w-xs" />
            <label class="label">
                <span asp-validation-for="ReleaseDate" class="text-sm text-red-400"></span>

            </label>
        </div>
        <div class="form-control w-full max-w-xs">
            <label asp-for="Genre" class="label">
            </label>
            <input type="text" placeholder="Type here" asp-for="Genre" class="input input-bordered w-full max-w-xs" />
            <label class="label">
                <span asp-validation-for="Genre" class="text-sm text-red-400"></span>

            </label>
        </div>
        <div class="form-control w-full max-w-xs">
            <label asp-for="Price" class="label">
            </label>
            <input type="text" placeholder="Type here" asp-for="Price" class="input input-bordered w-full max-w-xs" />
            <label class="label">
                <span asp-validation-for="Price" class="text-sm text-red-400"></span>

            </label>
        </div>






        <div class="form-group mt-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
