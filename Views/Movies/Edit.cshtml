@model MvcMovie.ViewModels.MovieFormViewModel

@{
    ViewData["Title"] = "Edit";
}



<div class="container">
    <div class="text-sm breadcrumbs">
        <ul>
            <li><a>Home</a></li>

            <li>Movies</li>
        </ul>
    </div>

    <form asp-action="Edit" class="my-2 mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Movie.Id"/>
        <div class="form-control w-full max-w-xs">
            <label asp-for="Movie.Title" class="label">
            </label>
            <input type="text" placeholder="Type here" asp-for="Movie.Title" class="input input-bordered w-full max-w-xs" />
            <label class="label">
                <span asp-validation-for="Movie.Title" class="text-sm text-red-400"></span>

            </label>
        </div>
       
        <div class="form-control w-full max-w-xs">
            <label asp-for="Movie.Genre" class="label">
            </label>
            <input type="text" placeholder="Type here" asp-for="Movie.Genre" class="input input-bordered w-full max-w-xs" />
            <label class="label">
                <span asp-validation-for="Movie.Genre" class="text-sm text-red-400"></span>

            </label>
        </div>
        <div class="form-control w-full max-w-xs">
            <label asp-for="Movie.Price" class="label">
            </label>
            <input type="text" placeholder="Type here" asp-for="Movie.Price" class="input input-bordered w-full max-w-xs" />
            <label class="label">
                <span asp-validation-for="Movie.Price" class="text-sm text-red-400"></span>

            </label>
        </div>

        <div class="form-control w-full max-w-xs">
            <label asp-for="Movie.DirectorId" class="label">
            </label>
            <select asp-for="Movie.DirectorId" class="input input-bordered w-full max-w-xs">
                @foreach(var item in Model.Directors)
                {
                    <option value=@item.Id>@item.Name</option>
                }
            </select>
            <label class="label">
                <span asp-validation-for="Movie.DirectorId" class="text-sm text-red-400"></span>

            </label>
        </div>




        <div class="form-group mt-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
